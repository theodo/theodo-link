{
    "version" : "2017-02-28",
    "operation" : "DeleteItem",
    "key" : {
        "id" : $util.dynamodb.toDynamoDBJson($ctx.args.id),
    },
    "condition": {
        "expression": "contains(#owner,:expectedOwner)",
        "expressionNames": {
            "#owner": "owner"
        },
        "expressionValues": {
            ":expectedOwner": $util.dynamodb.toDynamoDBJson($ctx.identity.sub)
        }
    }
}